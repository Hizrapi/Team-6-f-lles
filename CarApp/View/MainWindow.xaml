<Window x:Class="CarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:CarApp.ViewModel"
        Title="Car Management" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:CarViewModel/>
    </Window.DataContext>

    <StackPanel Margin="10">
        <TextBlock Text="License Plate" />
        <TextBox Text="{Binding LicensePlate, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>

        <TextBlock Text="Model" />
        <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>

        <StackPanel Orientation="Horizontal" Margin="0 5">
            <Button Content="Add Car" Command="{Binding AddCarCommand}" Margin="0 5"/>
            <Button Content="Edit Car" Command="{Binding EditCarCommand}" Margin="0 5"/>
            <Button Content="Delete Car" Command="{Binding DeleteCarCommand}" Margin="0 5"/>
        </StackPanel>

        <ListBox ItemsSource="{Binding Cars}" 
         SelectedItem="{Binding SelectedCar, Mode=TwoWay}" 
         Margin="0 10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding LicensePlate}" FontWeight="Bold"/>
                        <TextBlock Text=" - " />
                        <TextBlock Text="{Binding Model, TargetNullValue='[Ingen model]', FallbackValue='[Ingen model]'}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
